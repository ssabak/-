<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="국회의원 등록"
        android:textSize="30dp"
        android:textColor="#cef279"
        android:background="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button2"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="국회의원 확인 / 메모"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/listView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="종료"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/button6" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록 정치인 SNS"
        android:id="@+id/button4"
        android:textColor="#ffffff"
        android:background="#050099"

        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/listView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록 정치인 NEWS"
        android:id="@+id/button5"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/listView"
        android:layout_marginTop="26dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제작배경!"
        android:textColor="#ffffff"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정치란?"
        android:textColor="#ffffff"
        android:id="@+id/button6"
        android:layout_above="@+id/button3"
        android:layout_toLeftOf="@+id/button7" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:textColor="#ffffff"
        android:background="@drawable/modify"
        android:layout_toLeftOf="@+id/button3"
        android:layout_below="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신화된 리스트"
        android:textColor="#ffffff"
        android:id="@+id/textView7"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true" />


</RelativeLayout><!-- From: file:/D:/Graduation/Graduation_project/app/src/main/res/layout/main.xml -->